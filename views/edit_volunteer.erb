<h1></h1>


<form action="/edit_volunteer/<%= @volunteer.id %>" method="post" autocomplete="off">
   <input name="_method" type="hidden" value="patch">
   <label for="name">Volunteer's name:</label>
   <input type="text" name="name" value="<%= @volunteer.name %>"><br>

   <label for="project_id">Assign a new project</label>
   <select id='project_id' name='project_id' type='text'>
     <% @projects.each() do |project| %>
       <option value="<%= project.id %>"> <%= project.title %> </option>
     <% end %>
   </select>
   <button type="submit" name="button" value="Update Volunteer">Update</button>
 </form>
